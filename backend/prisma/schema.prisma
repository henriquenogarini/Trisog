generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  id Int @id @default(autoincrement())
  destine String
  location String 
  price Int
  days Int
  date String
  image String
  extraImages String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("trips")
}